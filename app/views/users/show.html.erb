<div class="user-info">
  <img class="user-photo" src="<%= @user.photo_url %>" ></img>
  <h2><%= @user.full_name %></h2>
</div>

<table class="table table-striped">
  <tr>
    <th>
      First Name
    </th>
    <th>
      Last Name
    </th>
    <th>
      Grade
    </th>
    <th>
      GPA
    </th>
    <th>
      Detentions
    </th>
    <th>
      Gender
    </th>
  </tr>
  <% @user.students.each do |student| %>
  <tr>
    <td>
      <%= student.first_name %>
    </td>
    <td>
      <%= student.last_name %>
    </td>
    <td>
      <%= student.grade %>
    </td>
    <td>
      <%= student.gpa %>
    </td>
    <td>
      <%= student.detentions %>
    </td>
    <td>
      <%= student.gender %>
    </td>
  </tr>
  <% end %>
</table>
